{
    // use env
    // https://github.com/gglin001/Dockerfiles/blob/master/mlir/Dockerfile
    // https://apt.llvm.org
    "cmake.configureSettings": {
        // "CMAKE_PREFIX_PATH": "/opt/conda/envs/py38",
        // "CMAKE_SYSROOT": "/opt/conda/envs/py38/x86_64-conda-linux-gnu/sysroot",
        // "Python3_EXECUTABLE": "/opt/conda/envs/py38/bin/python",
        "CMAKE_INSTALL_PREFIX": "install",
        "MLIR_DIR": "/usr/lib/llvm-16/lib/cmake/mlir",
