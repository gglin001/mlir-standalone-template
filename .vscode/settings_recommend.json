{
  // use env
  // https://github.com/gglin001/Dockerfiles/blob/master/mlir/Dockerfile
  // https://apt.llvm.org
  "cmake.configureSettings": {
    "CMAKE_INSTALL_PREFIX": "${workspaceFolder}/build/install",
    "LLVM_LIBRARY_DIR": "${workspaceFolder}/llvm-build/install/lib/cmake",
    "LLVM_DIR": "${workspaceFolder}/llvm-build/install/lib/cmake/llvm",
    "MLIR_DIR": "${workspaceFolder}/llvm-build/install/lib/cmake/mlir",
    // "LLVM_EXTERNAL_LIT": "/opt/conda/envs/py38/bin/lit",
  },
  "terminal.integrated.env.linux": {
    "PATH": "${workspaceFolder}/build/bin:${workspaceFolder}/llvm-build/install/bin:${env:PATH}",
  },
  "clangd.path": "/usr/bin/clangd-16",
  "mlir.server_path": "/usr/bin/mlir-lsp-server-16",
  "mlir.pdll_server_path": "/usr/bin/mlir-pdll-lsp-server-16",
  "mlir.tablegen_server_path": "/usr/bin/tblgen-lsp-server-16",
}
